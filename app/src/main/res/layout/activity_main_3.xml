<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    tools:context="com.example.android.restaurantfinder.MainActivity">


    <ImageView
        android:id="@+id/restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/restaurant"
        android:layout_marginRight="80dp"
        android:layout_below="@+id/se"
        android:paddingLeft="25dp"
        android:paddingTop="8dp"
        />


    <ImageView
         android:id="@+id/cafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cafe"
        android:layout_marginRight="7dp"
        android:layout_below="@+id/se"
        android:paddingTop="8dp"
        android:layout_toRightOf="@id/restaurant"/>

    <ImageView
        android:id="@+id/deli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:src="@drawable/deliverfood"
        android:layout_below="@+id/se"
        android:paddingTop="8dp"
        android:layout_toRightOf="@id/cafe"
        />

    <TextView
        android:id="@+id/textR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant"
        android:layout_below="@id/restaurant"
        android:layout_marginLeft="16dp"/>


    <TextView
        android:id="@+id/textc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cafe"
        android:layout_below="@id/cafe"
        android:layout_marginLeft="162dp"/>

    <TextView
        android:id="@+id/textdev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery"
        android:layout_below="@id/deli"
        android:layout_marginLeft="291dp"/>




        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Area or zipcode"
            android:textColor="#ff3300"
            android:layout_marginLeft="119dp"/>


        <SearchView
            android:id="@+id/et_simple"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:iconifiedByDefault="false"
            android:max="100"
            android:queryHint="  Lagos,Nigeria"
            android:layout_below="@id/area"
            android:layout_marginLeft="50dp">

        </SearchView>


    <TextView
        android:id="@+id/se"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:text="SELECT A PLACE TYPE"
        android:textColor="#ff3300"
        android:layout_below="@id/et_simple"
        android:textSize="13sp"
        android:layout_marginTop="12dp"/>

    <View
        android:layout_width="211dp"
        android:layout_height="1dp"
        android:layout_below="@id/et_simple"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/se"
        android:background="@android:color/darker_gray" />


    <ImageView
        android:id="@+id/bread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bread"
        android:layout_below="@id/textR"
        android:paddingLeft="25dp"
        android:paddingTop="19dp"
        android:layout_marginRight="56dp"/>

    <ImageView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/savesearch"
        android:layout_below="@id/textc"
        android:layout_toRightOf="@id/bread"
        android:layout_marginLeft="27dp"
        android:paddingTop="19dp"/>

    <ImageView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/more"
        android:layout_below="@id/textdev"
        android:layout_toRightOf="@id/bread"
        android:layout_marginLeft="160dp"
        android:paddingTop="19dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bakery"
        android:layout_below="@id/bread"
        android:layout_marginLeft="21dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved"
        android:layout_below="@id/save"
        android:layout_marginLeft="159dp"/>

    <TextView
        android:id="@+id/textmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More"
        android:layout_below="@id/more"
        android:layout_marginLeft="300dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECENTLY VIEWED PLACES"
        android:textColor="#ff3300"
        android:textSize="13sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="9dp"
        android:layout_below="@id/textmore"

        />



    <View
        android:layout_width="189dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/textmore"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="180dp"/>


</RelativeLayout>



